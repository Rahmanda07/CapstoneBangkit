<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang tombol -->
    <solid android:color="@color/blue_tint"/>

    <!-- Radius sudut untuk membuat sudut melengkung -->
    <corners android:radius="20dp"/>

    <!-- Tambahan opsional: Border atau garis pinggir -->
    <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- Opsional -->

    <!-- Tambahan opsional: Padding -->
    <padding android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>